<!DOCTYPE html>
<html lang="en">
<head>
	<title>Trang chủ</title>
	<% include ../partials/head %>
	<style>
		html, body{
			height: 100%
		}
	</style>
</head> 
	<!-- Header --> 
	<%include ../partials/header%>
	<div style="min-height: 85%"> 
	<% if (typeof data != 'undefined') { %> 
			<div id="menu" class="contaier-fluid" style="width: 100%; margin-left: 0px;">
	   			
	   		</div>
			<script>
				var el = document.getElementById('menu');
				var username = sessionStorage.getItem("username");  
				if (username.substr(0, 2) == "NV") {
					var menu = `
		        	<ul>
				    	<div class="row">
				    		<li class="col-sm-2"><a href="#">Trang chủ</a></li>
					        <li class=" col-sm-2"><a href="#" >Quản Lí kho sách</a>
							   <ul>
					                <li><a href="/list">Danh sách tài Liệu</a></li>
					                <li><a href="#">Nhà cung cấp </a></li>
					                
					            </ul>
							</li>
					        <li class=" col-sm-2"><a href="#" >Quản lí độc giả</a>
					            
					        </li>
					        <li class=" col-sm-2"><a href="#">Quản lí nhân viên</a>
					        	
					        </li>
					        <li class=" col-sm-2"><a href="#">Quản lí mượn trả</a>
							    <ul>
					                <li><a  href="#">Quản lí mượn sách</a></li>
					                <li><a  href="#">Quản lí trả sách</a></li> 
					            </ul>
							</li>  
				    	</div> 
				    </ul>
		        `; 
				}
				else if (username== "admin") {
					var menu = `
		        	<ul>
				    	<div class="row">
				    		<li class="col-sm-2"><a href= "#">Trang chủ</a></li> 
					        <li class=" col-sm-2"><a href="/danhSachTaiKhoan" >Quản lí tài khoản</a>
					            
					        </li>
					        <li class=" col-sm-2"><a href="/danhSachNhanVien">Quản lí nhân viên</a>
					        	
					        </li> 
				    </ul>
		        	`; 
				}
	          	// Tao html trong the co id = "menu"
				el.insertAdjacentHTML('afterbegin', menu);
			</script> 
		<%}%>  
		<% include ../partials/anhchay %>
		<div class="container" style="margin-top: 20px;"> 
			<% for (var i = 0; i < array_object_documents.length; i++) { %>
				<a href="/theloai/<%=array_object_documents[i].TenTheLoai%>" style="text-decoration: none;"><h3><%=array_object_documents[i].TenTheLoai%></h3></a>
					<hr>
					<div id="<%=i%>" class="carousel slide" data-ride="carousel" data-interval="false">	
						<!-- Wrapper for slides -->
						<div class="carousel-inner">							
							<div class="item active">
								<div class="row">
								<% for (var j = 0; j < 5 && j < array_object_documents[i].documents.length; j++) { %>
									<% if (j % 5 == 0) { %> 
										<div class="col-sm-2 col-sm-offset-1"> 
											<a href="information/<%=array_object_documents[i].documents[j].id%>" style="text-decoration: none;">
												<div class="thumbnail">
													<img src="images/<%=array_object_documents[i].documents[j].Anh%>" title="<%=array_object_documents[i].documents[j].TenTL%>">

												</div>
											</a>
										</div>
									<%} else {%>
										<div class="col-sm-2"> 
											<a href="information/<%=array_object_documents[i].documents[j].id%>" style="text-decoration: none;">
											<div class="thumbnail">										
												<img src="images/<%=array_object_documents[i].documents[j].Anh%>" title="<%=array_object_documents[i].documents[j].TenTL%>">
											</div>
										</a>
										</div>
									<%}%> 
								<% }%>  					
							</div>
						</div>
						 
						<% for (var j = 5; j < array_object_documents[i].documents.length; j += 5) { %>  
							<div class="item">
								<div class="row"> 
									<div class="col-sm-2 col-sm-offset-1"> 
										<a href="information/<%=array_object_documents[i].documents[j].id%>" style="text-decoration: none;">
											<div class="thumbnail">										
												<img src="images/<%=array_object_documents[i].documents[j].Anh%>" title="<%=array_object_documents[i].documents[j].TenTL%>">
											</div>
										</a>
										 
									</div>
									<% for (var k = j + 1; k <(j + 5) && k < array_object_documents[i].documents.length; k++) { %> 										
										<div class="col-sm-2"> 
											<a href="information/<%=array_object_documents[i].documents[k].id%>" style="text-decoration: none;">
											<div class="thumbnail">										
												<img src="images/<%=array_object_documents[i].documents[k].Anh%>" title="<%=array_object_documents[i].documents[k].TenTL%>">
											</div>
										</a>
										</div> 
									<% }%>  
								</div>
							</div> 
						<%}%>
					</div>
					<!-- Left and right controls --> 
					<a class="left carousel-control" href="#<%=i%>" data-slide="prev" style="background-image: none; margin: -30px 0px 0px -40px;">
						<span class="glyphicon glyphicon-chevron-left" style="color:#4DC3FF"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="right carousel-control" href="#<%=i%>" data-slide="next" style="background-image: none; margin: -30px 0px 0px -40px;">
						<span class="glyphicon glyphicon-chevron-right" style="color:#4DC3FF"></span>
						<span class="sr-only">Next</span>
					</a>
					</div>
			<% }%>
		</div>
	</div>
	<br>
	<br>
	<!-- Footer -->
	<% include ../partials/footer %>
</body>
</html>
