								hienthi += '<tr>';
									hienthi += '<th>STT</th>'; 
								
									hienthi += '<th>Họ tên</th>'; 
									hienthi += '<th>Địa chỉ</th>'; 
									hienthi += '<th>Email</th>';
									hienthi += '<th>Số điện thoại</th>'; 
