<!DOCTYPE html>
<html>
<head>
	<title>Danh sách tài liệu</title>
	<% include ../partials/head %>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<style>
		html, body{
			height: 100%
		}
	</style>
</head>
<body style="margin-right: 0 !important; overflow-y: auto;">	
	<%include ../partials/header%>
	<div style="min-height: 85%"> 
		<% include ../partials/anhchay %>
		<div class="container" style="margin-top: 20px; ">  
			<div class="row">
				<div class="form-group">
					<div class="col-sm-3">
						<a href="/danhSachTaiLieu">
							<h4 style="color: red;"><b>Danh sách tài liệu</b></h4>
						</a>
					</div> 
				</div> 
				<form action="/search_tailieu" method="get">
					<div class="form-group">
						<div class="col-sm-3 col-sm-offset-2">
							<input type="text" class="form-control" placeholder="Tìm kiếm tại đây..." name="noi_dung_tim_kiem">
						</div>
						<div class="col-sm-1">
							<div class="btn-group"> 
								<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span>Tìm kiếm</button>
							</div> 
						</div>  
					</div>					
				</form>
				<div class="col-sm-2" style="float: right;">
					<button type="button" class="btn btn-primary" style="text-align: right;" data-toggle="modal" data-target="#myModal">Thêm tài liệu</button>
					<!-- Modal -->
				 	<div class="modal fade" id="myModal" role="dialog">
				    	<div class="modal-dialog modal-lg">
				    
				      	<!-- Noi dung cua modal -->
				      	<div class="modal-content">
					        <div class="modal-header">
					          <button type="button" class="close" data-dismiss="modal">&times;</button>
					          <h4 class="modal-title">Thông tin tài liệu</h4>
					        </div>

					        <!-- Thong tin cua tai lieu -->
							
							<div class="modal-body">  
								<div class="form-group-inline">
			           				<label for="ma-nhan-vien">STT: </label>
			           				<div class="input-group">
			           					<span class="input-group-addon">
											<i class="glyphicon glyphicon-user"></i> 
										</span>
										<input type="text" class="form-control" required="" id="id">
			           				</div>
			           			</div>   
								
					        <div class="modal-body">  
								<div class="form-group-inline">
			           				<label for="ma-nhan-vien">Tên tài liệu: </label>
			           				<div class="input-group">
			           					<span class="input-group-addon">
											<i class="glyphicon glyphicon-user"></i> 
										</span>
										<input type="text" class="form-control" required="" id="TenTL">
			           				</div>
			           			</div>   

			           			<div class="form-group-inline">
			           				<label for="ma-nhan-vien">Tên thể loại: </label>
			           				<div class="input-group">
			           					<span class="input-group-addon">
											<i class="glyphicon glyphicon-phone"></i> 
										</span>
										<input type="text" class="form-control" required id="TenTheLoai" id="sdt">
			           				</div>
			           			</div>  

								<div class="form-group-inline">
	           				<label for="ma-nhan-vien">Tên NXB: </label>
	           				<div class="input-group">
	           					<span class="input-group-addon">
									<i class="glyphicon glyphicon-user"></i> 
								</span>
								<input type="text" class="form-control" required="" id="TenTheLoai_Edit">
	           				</div>
	           			</div>   

						
						<div class="form-group-inline">
	           				<label for="ma-nhan-vien">Năm XB: </label>
	           				<div class="input-group">
	           					<span class="input-group-addon">
									<i class="glyphicon glyphicon-user"></i> 
								</span>
								<input type="text" class="form-control" required="" id="TenTheLoai_Edit">
	           				</div>
	           			</div>   
						
						<div class="form-group-inline">
	           				<label for="ma-nhan-vien">Ngôn ngữ: </label>
	           				<div class="input-group">
	           					<span class="input-group-addon">
									<i class="glyphicon glyphicon-user"></i> 
								</span>
								<input type="text" class="form-control" required="" id="TenTheLoai_Edit">
	           				</div>
	           			</div>   

			           			<div class="form-group-inline">
			           				<label for="ma-nhan-vien">Giá bìa: </label>
			           				<div class="input-group">
			           					<span class="input-group-addon">
											<i class="glyphicon glyphicon-home"></i> 
										</span>
										<input type="text" class="form-control" required="" id="GiaBia">
			           				</div>
			           			</div>   
				       		</div>
				      		<div class="modal-footer">  
					        	<button type="button" id="taomoi" class="btn btn-primary" style="width: 90px;" onclick="themNV();">Tạo mới</button>
					        	<button type="button" class="btn btn-default" data-dismiss="modal" style="width: 90px;" id="close">Close</button> 
					        </div>  
				 		</div>
				 	</div>
				 	<!-- Ket thuc modal -->
				</div>
			</div>
				</div>
			<br><br>
			<hr> 
			<div id="DSTL">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>STT</th>
							<th>Tên tài liệu</th>
							<th>Tên thể loại</th>
							<th>Tên tác giả</th>
							<th>Tên NXB</th>
							<th>Năm XB</th>
							<th>Giá bìa</th>
							<th>Hành động</th>
						</tr>
					</thead>
					<tbody> 
						<%for (var i=0; i<danhSachTaiLieu.length; i++){%>
							<tr>
								<td><%=i+1%></td>
								<td><%=danhSachTaiLieu[i].TenTL%></td>
								<td><%=danhSachTaiLieu[i].TenTheLoai%></td>
								<td><%=danhSachTaiLieu[i].TenTG%></td>
								<td><%=danhSachTaiLieu[i].TenNXB%></td>
								<td><%=danhSachTaiLieu[i].NamXB%></td>
								
								<td><%=danhSachTaiLieu[i].GiaBia%></td>
								
								<td>							
									<button type="submit" class="btn btn-default" name="edit" id="buttonEdit" onclick="layTTtailieu('<%=danhSachTaiLieu[i].id%>', '<%=danhSachTaiLieu[i].TenTL%>', '<%=danhSachTaiLieu[i].TenTheLoai%>', '<%=danhSachTaiLieu[i].TenTG%>', '<%=danhSachTaiLieu[i].TenNXB%>', '<%=danhSachTaiLieu[i].NamXB%>', '<%=danhSachTaiLieu[i].GiaBia%>');" data-toggle="modal" data-target="#editModal">
									    <span class="glyphicon glyphicon-wrench"></span>
									</button>  
									<button type="submit" class="btn btn-default" name="delete">
									    <span class="glyphicon glyphicon-trash"></span>
									</button>												
								</td>						
							</tr>	 
						<%};%>
					</tbody>
				</table>
				
			</div>
			<!-- Modal -->
			
		 	<div class="modal fade" id="editModal" role="dialog">
		    	<div class="modal-dialog modal-lg">
		    
		      	<!-- Noi dung cua modal -->
		      	<div class="modal-content">
			        <div class="modal-header">
			          <button type="button" class="close" data-dismiss="modal">&times;</button>
			          <h4 class="modal-title">Thông tin tài liệu</h4>
			        </div>

			        <!-- Thong tin cua nhan vien -->
			        <div class="modal-body">  
		        		<div class="form-group-inline">
		       				<label for="ma-nhan-vien">Mã Tài liệu: </label>
		       				<div class="input-group">
		       					<span class="input-group-addon">
									<i class="glyphicon glyphicon-user"></i> 
								</span>
								<input type="text" class="form-control" required="" id="id" disabled="">
		       				</div>
	           			</div>   
						<div class="form-group-inline">
	           				<label for="ma-nhan-vien">Tên tài liệu: </label>
	           				<div class="input-group">
	           					<span class="input-group-addon">
									<i class="glyphicon glyphicon-user"></i> 
								</span>
								<input type="text" class="form-control" required="" id="TenTL_Edit">
	           				</div>
	           			</div>   
						
						<div class="form-group-inline">
	           				<label for="ma-nhan-vien">Tên thể loại: </label>
	           				<div class="input-group">
	           					<span class="input-group-addon">
									<i class="glyphicon glyphicon-user"></i> 
								</span>
								<input type="text" class="form-control" required="" id="TenTheLoai_Edit">
	           				</div>
	           			</div>   
						
						<div class="form-group-inline">
	           				<label for="ma-nhan-vien">Tên tác giả: </label>
	           				<div class="input-group">
	           					<span class="input-group-addon">
									<i class="glyphicon glyphicon-user"></i> 
								</span>
								<input type="text" class="form-control" required="" id="TenTheLoai_Edit">
	           				</div>
	           			</div>   

						
						<div class="form-group-inline">
	           				<label for="ma-nhan-vien">Tên NXB: </label>
	           				<div class="input-group">
	           					<span class="input-group-addon">
									<i class="glyphicon glyphicon-user"></i> 
								</span>
								<input type="text" class="form-control" required="" id="TenTheLoai_Edit">
	           				</div>
	           			</div>   

						
						<div class="form-group-inline">
	           				<label for="ma-nhan-vien">Năm XB: </label>
	           				<div class="input-group">
	           					<span class="input-group-addon">
									<i class="glyphicon glyphicon-user"></i> 
								</span>
								<input type="text" class="form-control" required="" id="TenTheLoai_Edit">
	           				</div>
	           			</div>   

					
	           			<div class="form-group-inline">
	           				<label for="ma-nhan-vien">Giá bìa: </label>
	           				<div class="input-group">
	           					<span class="input-group-addon">
									<i class="glyphicon glyphicon-phone"></i> 
								</span>
								<input type="text" class="form-control" required id="GiaBia_Edit">
	           				</div>
	           			</div>  
		      		<div class="modal-footer">  
			        	<button type="button" id="luu" class="btn btn-primary" style="width: 90px;" onclick="suaNV();">Lưu</button>
			        	<button type="button" class="btn btn-default" data-dismiss="modal" style="width: 90px;" id="close_Edit">Close</button> 
			        </div>  
		 		</div>
		 	</div>
		 	<!-- Ket thuc Modal -->	
			
		</div>	 
	</div>
</body>
</html>