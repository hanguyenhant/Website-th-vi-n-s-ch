	<!-- Header -->
	<div>
		<header>
			<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
			  	<!-- Brand and toggle get grouped for better mobile display -->
			  	<div class="navbar-header">
			    	<a class="navbar-brand" href="#" style="color: orange;">H2ON</a>
			  	</div>

			  	<!-- Collect the nav links, forms, and other content for toggling -->
			  	<div class="collapse navbar-collapse">
			    	<form class="navbar-form navbar-left" role="search">
			      		<div class="form-group">
			        		<input type="text" class="form-control" placeholder="Tìm kiếm tại đây...">
			      		</div> 
			      		<div class="form-group" style="margin-left: 10px;">
			      			<select id="theLoai" class="form-control">
				    			<option disabled selected hidden>Chọn thể loại</option>
				    			<option>...</option>
				  			</select>
			      		</div>
			      		<button type="submit" class="btn btn-warning">Tìm kiếm</button>
			   		</form>
			    	<div class="nav navbar-nav navbar-right">
			    		<% if(data == null) { %>
			    			<form class="navbar-form navbar-right" role="login" action="http://localhost:3000" method="post">
				      		<div class="form-group">
				        		<input type="text" style="width: 160px;" class="form-control" placeholder="username" name="username">
				      		</div>
				      		<div class="form-group">
				        		<input type="password" style="width: 160px; margin-left: 10px;" class="form-control" placeholder="password" name="password">
				      		</div> 
				      		<button type="submit" class="btn btn-warning">Đăng nhập</button>
				    		</form>
			    		<%} %>
			    		<% if(message == "error") { %>
			    			<script type="text/javascript"> 
			    				alert("Username or password error!"); 
			    			</script>
			    		<%} %>
			    		<% if(data != null) { %>
			    			<h4 style="color: white;"><%=data%></h4>
			    		<%} %>
			    	</div>
			  	</div> 
			</nav>
